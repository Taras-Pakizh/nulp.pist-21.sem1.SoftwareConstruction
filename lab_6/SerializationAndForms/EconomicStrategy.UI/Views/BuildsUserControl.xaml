<UserControl x:Class="EconomicStrategy.UI.Views.BuildsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EconomicStrategy.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Width="160">
            <Button x:Name="saveButton" Content="Зберегти гру" FontFamily="Ubuntu Mono" FontWeight="Bold" Background="#FFB6D7EE" Foreground="#FF2230C1"/>
            <ListBox x:Name="buildsList" ItemsSource="{Binding builds}" Height="423" VerticalAlignment="Bottom"/>
            <TextBox x:Name="xField" Height="23" TextWrapping="Wrap" Text="x"/>
            <TextBox x:Name="yField" Height="23" TextWrapping="Wrap" Text="y"/>
            <Button x:Name="buildButton" Content="Будувати"/>
            <Button x:Name="skipButton" Content="Пропустити"/>
        </StackPanel>
    </Grid>
</UserControl>
